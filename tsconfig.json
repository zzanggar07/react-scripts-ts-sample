{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
            "@component/*": ["src/component/*"],
            "@mainContainer/*": ["src/component/main-container/*"],
            "@home/*": ["src/component/main-container/container/home/*"],
            "@learning/*": ["src/component/main-container/container/learning/*"],
            "@manager/*": ["src/component/main-container/container/manager/*"],
            "@tagging/*": ["src/component/main-container/container/tagging/*"],
            "@modal/*": ["src/component/modal/*"],
            "@notify/*": ["src/component/notify/*"],
            "@router/*": ["src/component/router/*"],
            "@models/*": ["src/models/*"],
            "@api/*": ["src/models/api/*"],
            "@service/*": ["src/models/service/*"],
            "@utils/*": ["src/utils/*"]
        },
        "outDir": "build/",
        "rootDir": "src/",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strictFunctionTypes": true,
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "public/",
        "src/setupTests.ts"
    ]
}
